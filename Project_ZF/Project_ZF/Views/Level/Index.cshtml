@using Project_ZF.ViewModels;

@model LevelViewModel;

<div class="container mt-5">
    <h1 class="mb-4">Levels</h1>

    @if (User.IsInRole("admin") || User.IsInRole("verantwoordelijke"))
    {
        <div class="mt-3 mb-3">
            <a class="btn btn-success" asp-action="Create">Maak een nieuw level</a>
        </div>
    }

    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Nummer</th>
                <th>Naam Level</th>
                <th>Punten </th>
                @if (User.IsInRole("admin") || User.IsInRole("verantwoordelijke"))
                {
                    <th>Acties</th>
                }

            </tr>
        </thead>
        <tbody>
            @foreach (var level in Model.Levels)
            {
                <tr>
                    <td>@level.Id</td>
                    <td>@level.Naam</td>
                    <td>@level.BenodigdePunten</td>

                    @if (User.IsInRole("admin") || User.IsInRole("verantwoordelijke"))
                    {
                        <td>
                            <a class="btn btn-primary btn-sm mb-1" asp-action="Edit" asp-route-id="@level.Id">Aanpassen</a>
                            <form asp-action="Delete" asp-route-id="@level.Id" method="post">
                                <button type="submit" class="btn btn-danger btn-sm mb-1">Verwijderen</button>
                            </form>
                        </td>
                    }

                </tr>
            }
        </tbody>
    </table>
</div>