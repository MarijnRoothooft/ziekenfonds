@using Project_ZF.ViewModels;

@model LevelCreateViewModel;

<div class="container mt-3">
    <h2>Beloning Toevoegen</h2>
    <form asp-action="Create">
        <div class="form-group">
            <label asp-for="Naam"></label>
            <input asp-for="Naam" class="form-control" />
            <span asp-validation-for="Naam" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="BenodigdePunten"></label>
            <input asp-for="BenodigdePunten" class="form-control" />
            <span asp-validation-for="BenodigdePunten" class="text-danger"></span>

        </div>


        <button type="submit" class="btn btn-success">Toevoegen</button>

    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
