@model Project_ZF.ViewModels.OpleidingViewModel

<title>Delete Opleiding</title>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

<div class="container mt-5">
    <h1 class="mb-4">Verwijder Opleiding</h1>

    <h3>Are you sure you want to delete this?</h3>
    <div class="form-group">
        <label>Naam</label>
        <p class="form-control-static">@Model.Naam</p>
    </div>
    <div class="form-group">
        <label>Beschrijving</label>
        <p class="form-control-static">@Model.Beschrijving</p>
    </div>
    <div class="form-group">
        <label>Begin Datum</label>
        <p class="form-control-static">@Model.BeginDatum.ToString("dd-MM-yyyy")</p>
    </div>
    <div class="form-group">
        <label>Eind Datum</label>
        <p class="form-control-static">@Model.EindDatum.ToString("dd-MM-yyyy")</p>
    </div>
    <div class="form-group">
        <label>Aantal Plaatsen</label>
        <p class="form-control-static">@Model.AantalPlaatsen</p>
    </div>
    <div class="form-group">
        <label>Opleiding Vereist Id</label>
        <p class="form-control-static">@Model.OpleidingVereistId</p>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Verwijder</button>
        <a class="btn btn-secondary" asp-action="Index">Terug</a>
    </form>
</div>
