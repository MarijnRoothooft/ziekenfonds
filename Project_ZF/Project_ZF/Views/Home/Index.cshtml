                                    var groepsreis = Model.BeschikbareGroepsreizen[i + j];
                                    var foto = Model.BeschikbareFotos.FirstOrDefault(f => f.Bestemming != null && f.Bestemming.Id == groepsreis.Bestemming.Id);
