                                            <div class="card mb-4">
                                                <a href="@Url.Action("Detail", "Details", new { id = groepsreis.Id })">
                                                    <img src="~/images/@foto.Naam" class="card-img-top fixed-size-img" alt="@foto.Naam">
                                                </a>
