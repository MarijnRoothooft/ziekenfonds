@model Project_ZF.ViewModels.KindToevoegenViewModel

<div class="container">
    <h2>Kind Toevoegen</h2>
    <form asp-action="Toevoegen">
        <div class="form-group">
            <label asp-for="Naam"></label>
            <input asp-for="Naam" class="form-control" />
            <span asp-validation-for="Naam" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Voornaam"></label>
            <input asp-for="Voornaam" class="form-control" />
            <span asp-validation-for="Voornaam" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Geboortedatum"></label>
            <input asp-for="Geboortedatum" class="form-control" />
            <span asp-validation-for="Geboortedatum" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Allergieën"></label>
            <input asp-for="Allergieën" class="form-control" />
            <span asp-validation-for="Allergieën" class="text-danger"></span>
        </div>
        <div class="form-group mb-4">
            <label asp-for="Medicatie"></label>
            <input asp-for="Medicatie" class="form-control" />
            <span asp-validation-for="Medicatie" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-success">Toevoegen</button>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


