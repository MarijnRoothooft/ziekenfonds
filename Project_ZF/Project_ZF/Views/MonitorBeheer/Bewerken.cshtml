@model Project_ZF.ViewModels.MonitorEditViewModel

<div class="mt-4"><h2>Monitor Bewerken</h2></div>

<form asp-action="Bewerken" asp-controller="MonitorBeheer" method="post" class="container mt-4">
    <div class="form-group row mt-2">
        <label for="Naam" class="col-sm-2 col-form-label">Naam</label>
        <div class="col-sm-10">
            <input asp-for="Naam" readonly class="form-control" id="Naam" />
        </div>
    </div>
     <div class="form-group row mt-2">
        <label for="Voornaam" class="col-sm-2 col-form-label">Voornaam</label>
        <div class="col-sm-10">
            <input asp-for="Voornaam" readonly class="form-control" id="Voornaam" />
        </div>
    </div>
    <div class="form-group row mt-2">
        <label for="Email" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <input asp-for="Email" readonly class="form-control" id="Email" />
        </div>
    </div>
    <div class="form-group row mt-2">
        <div class="col-sm-10 offset-sm-2">
            <div class="form-check">
                <input asp-for="IsActief" class="form-check-input" type="checkbox" id="IsActief" />
                <label asp-for="IsActief" class="form-check-label">Actief</label>
            </div>
        </div>
    </div>
    <div class="form-group row mt-2">
        <div class="col-sm-10 offset-sm-2">
            <div class="form-check">
                <input asp-for="IsHoofdMonitor" class="form-check-input" type="checkbox" id="IsHoofdMonitor" />
                <label asp-for="IsHoofdMonitor" class="form-check-label">Hoofdmonitor</label>
            </div>
        </div>
    </div>

    <div class="form-group row mt-2">
        <div class="col-sm-10 offset-sm-2">
            <button type="submit" class="btn btn-success">Opslaan</button>
        </div>
    </div>
</form>
