@model Project_ZF.ViewModels.GroepsreisEditViewModel

@{
    ViewData["Title"] = "Groepsreis Aanpassen";
}

<h1>@ViewData["Title"]</h1>

<h3>@Model.BestemmingsNaam</h3>

<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="EditGroepsreis">
            <div class="form-group">
                <label asp-for="BeginDatum" class="control-label"></label>
                <input asp-for="BeginDatum" class="form-control" />
                <span asp-validation-for="BeginDatum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EindDatum" class="control-label"></label>
                <input asp-for="EindDatum" class="form-control" />
                <span asp-validation-for="EindDatum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prijs" class="control-label"></label>
                <input asp-for="Prijs" class="form-control" />
                <span asp-validation-for="Prijs" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StandaardPunten" class="control-label"></label>
                <input asp-for="StandaardPunten" class="form-control" />
                <span asp-validation-for="StandaardPunten" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="GroepsreisId" />
            <div class="form-group">
                <input type="submit" value="Opslaan" class="btn btn-success btn-sm mb-1" />
                <a asp-action="Index" class="btn btn-secondary btn-sm mb-1">Annuleren</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}